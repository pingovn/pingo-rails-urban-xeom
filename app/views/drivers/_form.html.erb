<%= simple_form_for(@driver) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :birthday, :start_year => 1900, :end_year => Time.now.year - 18 %>
    <%= f.input :gender, collection: [ ["Male" ,1], ["Female", 2] ], prompt: "Choose a gender"%>
    <%if !@driver.avatar.url.blank?%>
    <%=image_tag @driver.avatar.url(:small)%>
    <%end%>
    <%= f.input :avatar , as: :file  %>
    <%= f.input :driver_license %>
    <%= f.input :job %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
