<%= search_form_for @search, url: search_drivers_path do |f| %>

  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>
  <p><%= link_to_add_fields "Add Conditions", f, :condition %></p>
  <div class="field" id="sort">
    Sort: <br/>
    <%= f.sort_fields do |s| %>
      <%= s.sort_select %> 
    <% end %>
  </div>
  <div class="actions"><%= f.submit "Search", :class => 'btn btn-primary' %></div>
<% end %>

<table id="drviers" class="table">
  <tr>
    <th><%= sort_link @search, :first_name %></th>
    <th><%= sort_link @search, :last_name %></th>
    <th><%= sort_link @search, :address %></th>
    <th><%= sort_link @search, :phone %></th>
    <th><%= sort_link @search, :birthday %></th>
    <th><%= sort_link @search, :gender %></th>
    <th><%= sort_link @search, :driver_license %></th>
    <th><%= sort_link @search, :job %></th>
  </tr>
  <% @drivers.each do |driver| %>
      <tr>
        <td><%= link_to(driver.first_name, driver) %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.address %></td>
          <td><%= driver.phone %></td>
          <td><%= driver.birthday %></td>
          <td>
            <%= if(driver.gender == 1) 
                "Male" 
              else 
                "Female" 
              end %>
          </td>
          <td><%= driver.driver_license %></td>
          <td><%= driver.job %></td>
      </tr>
  <% end %>
</table>

